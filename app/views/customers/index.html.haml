-page_title model.name.pluralize

-content_for :options do
  =link_to "New #{model.name}", new_customer_path, :class => 'btn btn-primary btn-block'

%table.table.table-striped
  %thead
    %tr
      %th
      %th Name
  %tbody
    -@customers.each do |customer|
      %tr
        %td=link_to 'edit', edit_customer_path( customer ), :class => 'btn btn-default btn-xs'
        %td=customer.name
        %td
          -if customer.removable?
            =link_to 'delete', customer_path( customer ), :class => 'btn btn-warning btn-xs', :data => {:confirm => 'Are you sure?'}, :method => :delete
          -else
            ="has #{pluralize(customer.projects.count, 'project')}"
=will_paginate @customers, :renderer => BootstrapPagination::Rails
