-content_for :page_title do
  %h1
    %span.text-muted Project:
    =@project.name

-content_for :options do
  %h1 &nbsp;
  =link_to 'Edit', edit_project_path( @project ), :class => 'btn btn-primary btn-block'

%h3
  %table.table.table-striped
    %tr
      %th Oil Co
      %td=@project.oil_co
    %tr
      %th Customer 
      %td=@project.customer
    %tr
      %th Departure Site 
      %td=@project.departure_site
    %tr
      %th Work Site 
      %td=@project.work_site
    %tr
      %th Start Date 
      %td=@project.start_date
    %tr
      %th End Date 
      %td=@project.end_date
