=simple_form_for @assignment, wrapper: :horizontal_form, html: {class: 'form-horizontal'} do |f|
  =f.input :employee_id, collection: Employee.alphabetical.active
  =f.input :project_id, collection: Project.active.sorted.map{|p| [p.to_s, p.id]}
  =f.input :position_id, collection: Position.alphabetical
  =f.input :start_date, as: :string
  =f.input :end_date, as: :string
  %input{name: 'return_to', value: params[:return_to], type: 'hidden'}
  =f.submit class: 'btn btn_primary'
