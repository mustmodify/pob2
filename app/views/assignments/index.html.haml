-page_title "Employees Assigned to #{@project.name}"

-content_for :options do
  =link_to 'New Assignment', new_project_assignment_path(@project), :class => 'btn btn-primary btn-block'
  =link_to 'Back to Employee', project_path(@project), :class => 'btn btn-default btn-block'

-if @assignments.empty?
  .text-muted No employees assigned.
-else
  %table.table.table-striped
    %thead
      %tr
        %th Employee
        %th Position 
        %th Rate
        %th Normal Rate
        %th 
    %tbody
      -@assignments.each do |assignment|
        %tr 
          %th=assignment.employee
          %td=assignment.position
          %td=number_to_currency( assignment.daily_rate )
          %td=number_to_currency( assignment.normal_rate )
          %td
            =link_to 'edit', edit_project_assignment_path( @project, assignment ), :class => 'btn btn-default btn-xs btn-block'
            =link_to 'delete', project_assignment_path( @project, assignment ), :class => 'btn btn-warning btn-xs btn-block', :method => :delete, :data => {:confirm => 'Are you sure?'}
