-page_title "Timesheet Report"

:css
  body {
    font-size: 11px;
  }

-content_for :options do
  .panel.panel-info
    .panel-body
      =simple_form_for @timesheet, :url => '/reports/timesheet', wrapper: :vertical_form do |f|
        =f.input :start_date, as: :dated, required: true
        =f.input :end_date, as: :dated, required: true
        =f.input :employee_id, collection: Employee.alphabetical, required: false
        =f.input :project_id, collection: Project.all, required: false
        =f.button :submit, 'Build Report'

=render :partial => 'reports/timesheet_table'

.col-xs-6.col-xs-offset-3
  .panel.panel-info
    .panel-body
      .text-muted For office use only
      %h4
        Comments
      .spacer{style: 'height: 4em'}
      %i Approved by:
