.row.col-md-offset-3.col-md-6
  .spacer
  .spacer
  .spacer
  .panel.panel-default
    .panel-body
      =form_for @user_session, :class => 'form-signin' do |f|
        =image_tag('logo.png', width: 175)

        %h2.form-signin-heading Please Sign In
    
        .form-group
          = f.text_field :email, placeholder: 'email', class: 'form-control'
          -if @user_session.errors.include?(:username)
            .spacer
            .alert.alert-danger.alert-sm
              Email 
              =@user_session.errors[:username].join(', ')
          -else
            .help-block Login with your email address or username.
        .form-group
          = f.password_field :password, { placeholder: 'password', class: 'form-control'}
          -if @user_session.errors.include?(:password)
            .spacer
            .alert.alert-danger.alert-sm
              Password
              =@user_session.errors[:password].join(', ')

        .spacer
        .spacer
        = f.button 'Sign In', :class => 'btn btn-primary'

:javascript
  window.onload = function() 
  {
    function Focus()
    {
    var username = document.getElementById('user_session_email');
    username.select();
    }
  
    Focus();
  };
