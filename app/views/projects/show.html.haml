-content_for :page_title do
  %h1
    %span.text-muted Project:
    =@project.name

-content_for :options do
  %h1 &nbsp;
  =link_to 'Edit', edit_project_path( @project ), :class => 'btn btn-primary btn-block'
  =link_to 'Assign Employees', project_assignments_path(@project), :class => 'btn btn-info btn-block'
  =link_to 'Add Crew Change', new_crew_change_path(crew_change: {project_id: @project.id}), :class => 'btn btn-default btn-block'
  =link_to 'Crew Change Log', project_crew_changes_path(@project), :class => 'btn btn-default btn-block'

=render @project

