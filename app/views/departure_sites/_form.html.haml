:css
  .radio-clunky {
    padding-left: 227px;
  }
  .radio-clunky input[type="radio"] {
    margin-left: 0 !important;
  }

=simple_form_for instance, wrapper: :horizontal_form, html: {class: 'form-horizontal'} do |f|
  =f.input :name
  =f.input :category, :collection => DepartureSite::CATEGORIES, :as => :radio_buttons
  =f.input :details, hint: 'address, directions, special instructions'
  =f.button :submit
