=simple_form_for @user, wrapper: :horizontal_form, html: {class: 'form-horizontal'} do |f|
  =f.input :first_name
  =f.input :last_name
  =f.input :email

  -if @user.new_record?
    =f.input :password
    =f.input :password_confirmation, :label => 'Retype It'
  -else
    =f.input :active, :as => :select

  .spacer
  =f.button :submit
